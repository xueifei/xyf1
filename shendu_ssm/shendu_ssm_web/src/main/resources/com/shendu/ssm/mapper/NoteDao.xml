<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shendu.ssm.mapper.NoteDao" >
    <insert id="addNote">
        insert into note(phone, name, stater, template_id)
        values (#{phone},#{name},#{stater},#{template_id})
    </insert>
    <select id="findAll" resultType="com.shendu.ssm.domain.Note">
        select * from note
    </select>
    <select id="findList" resultType="com.shendu.ssm.domain.Note">
        select * from note where id = #{id}
    </select>
    <update id="updateNote">
        update noto set  phone = #{phone}, name = #{name}, stater = #{stater},
        template_id = #{template_id} where id = #{id}
    </update>
    <delete id="deleteNote">
        delete from note where id = #{id}
    </delete>
</mapper>